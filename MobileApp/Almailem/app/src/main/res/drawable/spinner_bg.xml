<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white_two" />
                    <stroke android:width="2px" android:color="@color/grey" />
                    <corners android:radius="4dp" />
                </shape>
            </item>



            <item
                android:left="2dp"
                android:right="15dp"
                android:bottom="1dp"
                android:top="1dp">
                <bitmap

                     android:gravity="right" android:src="@drawable/down_arrow"

                   android:tint="@color/orange" />
            </item>
        </layer-list>
    </item>

</selector>