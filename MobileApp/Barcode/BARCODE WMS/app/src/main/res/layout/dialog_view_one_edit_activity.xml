<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutDialogContainer"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/layoutDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/barcode_value"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@android:color/transparent"
            android:textIsSelectable="true">

        </EditText>

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/icon_tick_success"
            app:tint="@color/white_two" />

        <TextView
            android:id="@+id/textMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Case Number Scanned"
            android:textColor="@color/orange"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/textTitle"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/icon_edit_details_small"
            android:gravity="center"
            android:focusableInTouchMode="true"
            android:padding="10dp"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:text="866886686868686868"
            android:textColor="@color/warm_grey_two"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="50"
            android:background="@drawable/button_bg_red"
            android:text="Cancel"
            android:textColor="@color/white_two"
            android:textSize="12sp" />l

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonYes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="50"
            android:background="@drawable/button_bg_orange"
            android:text="@string/confirm"
            android:textColor="@color/white_two"
            android:textSize="12sp" />


    </LinearLayout>
</LinearLayout>