<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/lyt_toolbar"
            layout="@layout/include_toolbar" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/lyt_swipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/lyt_summary_parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_time_ticket_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_devil_blue"
                        android:fontFamily="@font/roboto_slab_regular"
                        android:paddingTop="@dimen/dp_16"
                        android:paddingBottom="@dimen/dp_16"
                        android:paddingStart="@dimen/dp_28"
                        android:paddingEnd="@dimen/dp_16"
                        android:text="@string/time_ticket_summary"
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_24" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/lyt_search_parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="@dimen/dp_28"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginEnd="@dimen/dp_28"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/btn_new"
                            android:layout_width="@dimen/dp_128"
                            android:layout_height="wrap_content"
                            android:background="@drawable/devil_blue_rectangle_background"
                            android:fontFamily="@font/roboto_slab_bold"
                            android:gravity="center_horizontal"
                            android:paddingStart="@dimen/dp_32"
                            android:paddingTop="@dimen/dp_12"
                            android:paddingEnd="@dimen/dp_32"
                            android:paddingBottom="@dimen/dp_12"
                            android:text="@string/text_new"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_14" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/btn_search"
                            android:layout_width="@dimen/dp_128"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_16"
                            android:background="@drawable/orange_yellow_rectangle_background"
                            android:fontFamily="@font/roboto_slab_bold"
                            android:gravity="center_horizontal"
                            android:paddingStart="@dimen/dp_32"
                            android:paddingTop="@dimen/dp_12"
                            android:paddingEnd="@dimen/dp_32"
                            android:paddingBottom="@dimen/dp_12"
                            android:text="@string/search"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_14" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/btn_reset"
                            android:layout_width="@dimen/dp_128"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_16"
                            android:background="@drawable/dark_red_rectangle_background"
                            android:fontFamily="@font/roboto_slab_bold"
                            android:gravity="center_horizontal"
                            android:paddingStart="@dimen/dp_32"
                            android:paddingTop="@dimen/dp_12"
                            android:paddingEnd="@dimen/dp_32"
                            android:paddingBottom="@dimen/dp_12"
                            android:text="@string/reset"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_14" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_28"
                        android:layout_marginEnd="@dimen/dp_28"
                        android:background="@drawable/filter_background"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_12">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/summary_filter"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:drawableStart="@drawable/ic_search"
                            android:drawablePadding="@dimen/dp_8"
                            android:fontFamily="@font/roboto_slab_regular"
                            android:gravity="center_vertical"
                            android:hint="@string/search"
                            android:textColor="@color/color_black_2"
                            android:textColorHint="@color/color_cool_grey"
                            android:textSize="@dimen/text_size_14" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_search_clear"
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:layout_marginStart="@dimen/dp_8"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_cancel" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/summary_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginBottom="@dimen/dp_8" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <include
                    android:id="@+id/lyt_progress_parent"
                    layout="@layout/include_progress" />
            </FrameLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
