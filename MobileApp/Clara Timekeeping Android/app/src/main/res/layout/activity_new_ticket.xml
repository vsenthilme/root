<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include
            android:id="@+id/lyt_toolbar"
            layout="@layout/include_toolbar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/lyt_new_ticket_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_devil_blue"
                    android:fontFamily="@font/roboto_slab_regular"
                    android:padding="@dimen/dp_16"
                    android:text="@string/time_ticket_new"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20" />

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_matter_no_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginEnd="@dimen/dp_42"
                            android:fontFamily="@font/roboto_slab_semi_bold"
                            android:text="@string/matter_id"
                            android:textColor="@color/color_black_2"
                            android:textSize="@dimen/text_size_15"
                            tools:text="Matter ID" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/lyt_matter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/input_layout_matter_id"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dp_42"
                                android:layout_marginEnd="@dimen/dp_10"
                                android:layout_weight="1"
                                app:boxStrokeColor="@color/color_warm_grey_3"
                                app:endIconDrawable="@drawable/ic_arrow_drop_down"
                                app:endIconMode="custom"
                                app:hintAnimationEnabled="false"
                                app:hintEnabled="false">

                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/edt_txt_matter_id"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:cursorVisible="false"
                                    android:focusable="false"
                                    android:fontFamily="@font/roboto_slab_regular"
                                    android:hint="@string/select"
                                    android:inputType="none"
                                    android:singleLine="false"
                                    android:textColor="@color/color_black_2"
                                    android:textColorHint="@color/color_grey_2"
                                    android:textSize="@dimen/text_size_13" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <androidx.appcompat.widget.AppCompatCheckBox
                                android:id="@+id/all_matters_checkbox"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="@dimen/dp_4"
                                android:layout_weight="0.5"
                                android:buttonTint="@color/color_devil_blue"
                                android:fontFamily="@font/roboto_slab_semi_bold"
                                android:text="@string/all_matters"
                                android:textColor="@color/color_black_2"
                                android:textSize="@dimen/text_size_15"
                                app:layout_constraintStart_toEndOf="@+id/input_layout_matter_id"
                                app:layout_constraintTop_toTopOf="@+id/input_layout_matter_id" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_activity_code_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_42"
                            android:fontFamily="@font/roboto_slab_semi_bold"
                            android:text="@string/activity_code"
                            android:textColor="@color/color_black_2"
                            android:textSize="@dimen/text_size_15"
                            android:visibility="gone"
                            tools:text="Activity Code" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_activity_code"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_42"
                            android:visibility="gone"
                            app:boxStrokeColor="@color/color_warm_grey_3"
                            app:endIconDrawable="@drawable/ic_arrow_drop_down"
                            app:endIconMode="custom"
                            app:hintAnimationEnabled="false"
                            app:hintEnabled="false">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edt_txt_activity_code"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:cursorVisible="false"
                                android:focusable="false"
                                android:fontFamily="@font/roboto_slab_regular"
                                android:hint="@string/select"
                                android:inputType="none"
                                android:singleLine="false"
                                android:textColor="@color/color_black_2"
                                android:textColorHint="@color/color_grey_2"
                                android:textSize="@dimen/text_size_13" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_task_based_code_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_42"
                            android:fontFamily="@font/roboto_slab_semi_bold"
                            android:text="@string/task_based_code"
                            android:textColor="@color/color_black_2"
                            android:textSize="@dimen/text_size_15"
                            android:visibility="gone"
                            tools:text="Task Based Code" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_task_based_code"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_42"
                            android:visibility="gone"
                            app:boxStrokeColor="@color/color_warm_grey_3"
                            app:endIconDrawable="@drawable/ic_arrow_drop_down"
                            app:endIconMode="custom"
                            app:hintAnimationEnabled="false"
                            app:hintEnabled="false">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edt_txt_task_based_code"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:cursorVisible="false"
                                android:focusable="false"
                                android:fontFamily="@font/roboto_slab_regular"
                                android:hint="@string/select"
                                android:inputType="none"
                                android:singleLine="false"
                                android:textColor="@color/color_black_2"
                                android:textColorHint="@color/color_grey_2"
                                android:textSize="@dimen/text_size_13" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_client_name_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_42"
                            android:fontFamily="@font/roboto_slab_semi_bold"
                            android:text="@string/client_name"
                            android:textColor="@color/color_black_2"
                            android:textSize="@dimen/text_size_15"
                            tools:text="Client Name" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_client_name"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_42"
                            app:endIconMode="none"
                            app:hintAnimationEnabled="false"
                            app:hintEnabled="false">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edt_txt_client_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/timekeeper_code_background"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:enabled="false"
                                android:focusable="false"
                                android:fontFamily="@font/roboto_slab_regular"
                                android:inputType="none"
                                android:textColor="@color/color_black_2"
                                android:textSize="@dimen/text_size_13" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_time_keeper_code_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_42"
                            android:fontFamily="@font/roboto_slab_semi_bold"
                            android:text="@string/time_keeper_code"
                            android:textColor="@color/color_black_2"
                            android:textSize="@dimen/text_size_15"
                            tools:text="Time Keeper Code" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_time_keeper_code"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_42"
                            app:endIconMode="none"
                            app:hintAnimationEnabled="false"
                            app:hintEnabled="false">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edt_txt_time_keeper_code"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/timekeeper_code_background"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:enabled="false"
                                android:focusable="false"
                                android:fontFamily="@font/roboto_slab_regular"
                                android:inputType="none"
                                android:textColor="@color/color_black_2"
                                android:textSize="@dimen/text_size_13" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_timer_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_42"
                            android:fontFamily="@font/roboto_slab_semi_bold"
                            android:text="@string/timer"
                            android:textColor="@color/color_black_2"
                            android:textSize="@dimen/text_size_15"
                            tools:text="Timer" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_42"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/input_layout_timer"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                app:boxStrokeColor="@color/color_warm_grey_3"
                                app:hintAnimationEnabled="false"
                                app:hintEnabled="false">

                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/edt_txt_timer"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/timekeeper_code_background"
                                    android:clickable="false"
                                    android:cursorVisible="false"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:fontFamily="@font/roboto_slab_regular"
                                    android:gravity="center_horizontal"
                                    android:hint="@string/timer_zero"
                                    android:inputType="none"
                                    android:textColor="@color/color_black_2"
                                    android:textColorHint="@color/color_grey_2"
                                    android:textSize="@dimen/text_size_13" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/btn_timer_reset"
                                android:layout_width="@dimen/dp_42"
                                android:layout_height="@dimen/dp_42"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dp_12"
                                android:background="@drawable/dark_red_rectangle_background"
                                android:padding="@dimen/dp_6"
                                app:srcCompat="@drawable/ic_restart" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/btn_timer_start"
                                android:layout_width="@dimen/dp_42"
                                android:layout_height="@dimen/dp_42"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dp_12"
                                android:background="@drawable/devil_blue_rectangle_background"
                                app:srcCompat="@drawable/ic_arrow_right"
                                app:tint="@color/white" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_booked_hours_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_42"
                            android:fontFamily="@font/roboto_slab_semi_bold"
                            android:text="@string/booked_hours"
                            android:textColor="@color/color_black_2"
                            android:textSize="@dimen/text_size_15"
                            tools:text="Booked Hours" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_booked_hours"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_42"
                            app:boxStrokeColor="@color/color_warm_grey_3"
                            app:endIconMode="none"
                            app:hintAnimationEnabled="false"
                            app:hintEnabled="false">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edt_txt_booked_hours"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:cursorVisible="true"
                                android:fontFamily="@font/roboto_slab_regular"
                                android:hint="@string/booked_hour"
                                android:inputType="numberDecimal"
                                android:textColor="@color/color_black_2"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/text_size_13" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_bill_type_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_42"
                            android:fontFamily="@font/roboto_slab_semi_bold"
                            android:text="@string/bill_type"
                            android:textColor="@color/color_black_2"
                            android:textSize="@dimen/text_size_15"
                            tools:text="Bill Type*" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_bill_type"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_42"
                            app:boxStrokeColor="@color/color_warm_grey_3"
                            app:endIconDrawable="@drawable/ic_arrow_drop_down"
                            app:endIconMode="custom"
                            app:hintAnimationEnabled="false"
                            app:hintEnabled="false">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edt_txt_bill_type"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:cursorVisible="false"
                                android:focusable="false"
                                android:fontFamily="@font/roboto_slab_regular"
                                android:hint="@string/select"
                                android:inputType="none"
                                android:textColor="@color/color_black_2"
                                android:textColorHint="@color/color_grey_2"
                                android:textSize="@dimen/text_size_13" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_date_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_42"
                            android:fontFamily="@font/roboto_slab_semi_bold"
                            android:text="@string/date"
                            android:textColor="@color/color_black_2"
                            android:textSize="@dimen/text_size_15"
                            tools:text="Date" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_date"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_42"
                            app:boxStrokeColor="@color/color_warm_grey_3"
                            app:endIconDrawable="@drawable/ic_calendar"
                            app:endIconMode="custom"
                            app:endIconTint="@color/color_devil_blue"
                            app:hintAnimationEnabled="false"
                            app:hintEnabled="false">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edt_txt_date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:cursorVisible="false"
                                android:focusable="false"
                                android:fontFamily="@font/roboto_slab_regular"
                                android:textColor="@color/color_black_2"
                                android:textColorHint="@color/color_grey_2"
                                android:textSize="@dimen/text_size_13" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_assigned_rate_hours_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_42"
                            android:fontFamily="@font/roboto_slab_semi_bold"
                            android:text="@string/assigned_rate_hour"
                            android:textColor="@color/color_black_2"
                            android:textSize="@dimen/text_size_15"
                            tools:text="Assigned Rate/Hour" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_assigned_rate_hours"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_42"
                            app:endIconMode="none"
                            app:hintAnimationEnabled="false"
                            app:hintEnabled="false">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edt_txt_assigned_rate_hour"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/timekeeper_code_background"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:enabled="false"
                                android:focusable="false"
                                android:fontFamily="@font/roboto_slab_regular"
                                android:inputType="none"
                                android:textColor="@color/color_black_2"
                                android:textSize="@dimen/text_size_13" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_default_rate_hour_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_42"
                            android:fontFamily="@font/roboto_slab_semi_bold"
                            android:text="@string/default_rate_hour"
                            android:textColor="@color/color_black_2"
                            android:textSize="@dimen/text_size_15"
                            tools:text="Default Rate/Hour" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_default_rate_hour"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_42"
                            app:endIconMode="none"
                            app:hintAnimationEnabled="false"
                            app:hintEnabled="false">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edt_txt_default_rate_hour"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/timekeeper_code_background"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:enabled="false"
                                android:focusable="false"
                                android:fontFamily="@font/roboto_slab_regular"
                                android:inputType="none"
                                android:textColor="@color/color_black_2"
                                android:textSize="@dimen/text_size_13" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_time_ticket_amount_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_42"
                            android:fontFamily="@font/roboto_slab_semi_bold"
                            android:text="@string/time_ticket_amount"
                            android:textColor="@color/color_black_2"
                            android:textSize="@dimen/text_size_15"
                            tools:text="Time Ticket Amount" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_time_ticket_amount"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_42"
                            app:endIconMode="none"
                            app:hintAnimationEnabled="false"
                            app:hintEnabled="false">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edt_txt_time_ticket_amount"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/timekeeper_code_background"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:enabled="false"
                                android:focusable="false"
                                android:fontFamily="@font/roboto_slab_regular"
                                android:inputType="none"
                                android:textColor="@color/color_black_2"
                                android:textSize="@dimen/text_size_13" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_description_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginEnd="@dimen/dp_42"
                            android:fontFamily="@font/roboto_slab_semi_bold"
                            android:text="@string/description"
                            android:textColor="@color/color_black_2"
                            android:textSize="@dimen/text_size_15"
                            tools:text="Description*" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_layout_description"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_110"
                            android:layout_marginStart="@dimen/dp_42"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_marginEnd="@dimen/dp_42"
                            app:boxStrokeColor="@color/color_warm_grey_3"
                            app:hintAnimationEnabled="false"
                            app:hintEnabled="false">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edt_txt_description"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:cursorVisible="true"
                                android:fontFamily="@font/roboto_slab_regular"
                                android:gravity="start|top"
                                android:hint="@string/enter"
                                android:imeOptions="actionDone"
                                android:inputType="textMultiLine"
                                android:maxLength="1000"
                                android:textColor="@color/color_black_2"
                                android:textColorHint="@color/color_grey_2"
                                android:textCursorDrawable="@null"
                                android:textSize="@dimen/text_size_13" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.core.widget.NestedScrollView>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/dp_42"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_42"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btn_cancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/dark_red_rectangle_background"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:gravity="center"
                        android:paddingStart="@dimen/dp_12"
                        android:paddingTop="@dimen/dp_12"
                        android:paddingEnd="@dimen/dp_12"
                        android:paddingBottom="@dimen/dp_12"
                        android:text="@string/cancel"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_15" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btn_save"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_18"
                        android:layout_weight="1"
                        android:background="@drawable/devil_blue_rectangle_background"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:gravity="center"
                        android:paddingStart="@dimen/dp_12"
                        android:paddingTop="@dimen/dp_12"
                        android:paddingEnd="@dimen/dp_12"
                        android:paddingBottom="@dimen/dp_12"
                        android:text="@string/save"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_15" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <include
                android:id="@+id/lyt_progress_parent"
                layout="@layout/include_progress" />
        </FrameLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
