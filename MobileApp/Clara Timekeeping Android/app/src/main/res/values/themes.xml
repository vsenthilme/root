<resources>
    <!-- Base application theme. -->
    <style name="Theme.TimeTicket" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/color_devil_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorControlActivated">@color/color_devil_blue_dark</item>
        <item name="colorControlNormal">@color/color_devil_blue_dark</item>
    </style>

    <style name="TextInputErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/color_red</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditTextStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/color_devil_blue</item>
        <item name="colorControlActivated">@color/color_devil_blue</item>
    </style>

    <style name="Theme.TimeTicket.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Clara.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Clara.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/color_devil_blue</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="autocomplete" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">@color/color_devil_blue</item>
        <item name="colorControlActivated">@color/color_devil_blue</item>
        <item name="colorControlHighlight">@color/color_devil_blue</item>
    </style>

    <style name="DatePickerStyle" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/color_devil_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="materialCalendarHeaderLayout">@style/MaterialCalendarHeaderLayoutStyle</item>
        <item name="materialCalendarHeaderTitle">@style/MaterialCalendarHeaderTitleStyle</item>
        <item name="materialCalendarStyle">@style/MaterialCalendarStyle</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearanceStyle</item>
    </style>

    <style name="MaterialCalendarHeaderTitleStyle" parent="Widget.MaterialComponents.MaterialCalendar.HeaderTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="ShapeAppearanceStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="cornerSize">@dimen/dp_16</item>
    </style>

    <style name="MaterialCalendarHeaderLayoutStyle" parent="Widget.MaterialComponents.MaterialCalendar.HeaderLayout">
        <item name="android:background">@color/color_devil_blue</item>
    </style>

    <style name="CurrentDateStyle" parent="@style/Widget.MaterialComponents.MaterialCalendar.Day.Today">
        <item name="itemTextColor">@color/color_black_2</item>
        <item name="itemStrokeWidth">@dimen/dp_1</item>
        <item name="itemStrokeColor">@color/color_devil_blue</item>
        <item name="itemShapeAppearance">
            @style/ShapeAppearanceOverlay.MaterialComponents.MaterialCalendar.Day
        </item>
    </style>

    <style name="MaterialCalendarStyle" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="rangeFillColor">@color/color_blue_low</item>
        <item name="android:windowFullscreen">false</item>
        <item name="dayTodayStyle">@style/CurrentDateStyle</item>
        <item name="daySelectedStyle">@style/SelectedDateStyle</item>
    </style>

    <style name="SelectedDateStyle" parent="@style/Widget.MaterialComponents.MaterialCalendar.Day.Selected">
        <item name="itemFillColor">@color/color_devil_blue</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemStrokeWidth">@dimen/dp_0</item>
        <item name="itemShapeAppearance">
            @style/ShapeAppearanceOverlay.MaterialComponents.MaterialCalendar.Day
        </item>
    </style>
</resources>